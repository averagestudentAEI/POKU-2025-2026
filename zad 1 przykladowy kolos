#include <stdio.h>
#include <stdlib.h>
#include <math.h>
main()
{
 int y,x,i,suma;
 float srednia;
 i=0;
 suma=0;
 y=0;
do{
	
 	scanf("%d",&x);
 	i++;
 	if(x>=5&&x<=15)
 		{
 			suma=suma+x;
 			y++;
		 }
	 
}while(x>0&&i<5);

	 if(x<0)
	 {
	 
	 i=i-1;
	 printf("ilosc liczb:%d\n",i);
	}
	 else
	 printf("ilosc liczb:%d\n",i);
	 srednia=suma/y;
	 printf("srednia=%f",srednia);
	 
}
